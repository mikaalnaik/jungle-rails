<section class="admin-category-index">

  <header class="page-header">
    <h1>Admin &raquo; All Category</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <% Category.all.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>

      </tbody>
    </table>

  </div>

</section>
